<% if @circus.errors.any? %>
<ul>
  <% @circus.errors.full_messages.each do |err| %>
  <li><%= err %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @circus do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>
  <%= f.label "Image url" %>
  <%= f.text_field :image_url %>
  <%= f.submit %>
<% end %>